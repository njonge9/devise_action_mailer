<h1>Hello, Rails!</h1>

<% if user_signed_in?%>
    <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
    <%= link_to 'Logout', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
<% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-secondary' %>
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-danger' %>
<% end%>

